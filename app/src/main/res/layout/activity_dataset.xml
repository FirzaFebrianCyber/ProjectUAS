<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/full_width_header_container_model"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#3B82F6"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:gravity="center_vertical"
            android:elevation="6dp">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:contentDescription="Back"
                android:src="@drawable/ic_arrow_back"
                android:tint="#FFFFFF"
                tools:ignore="HardcodedText,UseAppTint,TouchTargetSizeCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="DATASET"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deskripsi Dataset"
                android:textColor="#111827"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginBottom="8dp"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dataset ini berisi data morfometrik dari berbagai jenis ikan untuk tujuan memprediksi beratnya. Dataset terdiri dari beberapa fitur seperti panjang, tinggi, dan lebar tubuh ikan, serta informasi tentang jenis ikan (Species)."
                android:textSize="16sp"
                android:textColor="#374151"
                android:layout_marginBottom="12dp"
                tools:ignore="HardcodedText,VisualLintLongText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fitur yang digunakan:\n• Species (kategori)\n• Length1, Length2, Length3 (panjang)\n• Height (tinggi)\n• Width (lebar)"
                android:textSize="16sp"
                android:textColor="#374151"
                android:layout_marginBottom="12dp"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:text="Sumber Dataset: https://www.kaggle.com/datasets/sushantbmujagule/fish-weight-prediction-dataset"
                android:textSize="16sp"
                android:textColor="#1E88E5"
                android:layout_marginBottom="16dp"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contoh Data"
                android:textColor="#111827"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                tools:ignore="HardcodedText" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:stretchColumns="*"
                    android:padding="4dp">

                    <TableRow>
                        <TextView android:text="Species" android:textStyle="bold" android:textColor="#1F2937" android:padding="8dp"
                            tools:ignore="HardcodedText" />
                        <TextView android:text="Length1" android:textStyle="bold" android:textColor="#1F2937" android:padding="8dp"
                            tools:ignore="HardcodedText" />
                        <TextView android:text="Length2" android:textStyle="bold" android:textColor="#1F2937" android:padding="8dp"
                            tools:ignore="HardcodedText" />
                        <TextView android:text="Length3" android:textStyle="bold" android:textColor="#1F2937" android:padding="8dp"
                            tools:ignore="HardcodedText" />
                        <TextView android:text="Height" android:textStyle="bold" android:textColor="#1F2937" android:padding="8dp"
                            tools:ignore="HardcodedText" />
                        <TextView android:text="Width" android:textStyle="bold" android:textColor="#1F2937" android:padding="8dp"
                            tools:ignore="HardcodedText" />
                        <TextView android:text="Weight" android:textStyle="bold" android:textColor="#1F2937" android:padding="8dp"
                            tools:ignore="HardcodedText" />
                    </TableRow>

                    <TableRow>
                        <TextView android:text="Roach" android:textColor="#374151" android:padding="8dp"
                            tools:ignore="HardcodedText" />
                        <TextView android:text="23.2" android:textColor="#374151" android:padding="8dp"
                            tools:ignore="HardcodedText" />
                        <TextView android:text="25.4" android:textColor="#374151" android:padding="8dp"
                            tools:ignore="HardcodedText" />
                        <TextView android:text="30.0" android:textColor="#374151" android:padding="8dp"
                            tools:ignore="HardcodedText" />
                        <TextView android:text="11.52" android:textColor="#374151" android:padding="8dp"
                            tools:ignore="HardcodedText" />
                        <TextView android:text="4.02" android:textColor="#374151" android:padding="8dp"
                            tools:ignore="HardcodedText" />
                        <TextView android:text="242.0" android:textColor="#374151" android:padding="8dp"
                            tools:ignore="HardcodedText" />
                    </TableRow>

                    <TableRow>
                        <TextView android:text="Bream" android:textColor="#374151" android:padding="8dp"
                            tools:ignore="HardcodedText" />
                        <TextView android:text="24.0" android:textColor="#374151" android:padding="8dp"
                            tools:ignore="HardcodedText" />
                        <TextView android:text="26.3" android:textColor="#374151" android:padding="8dp"
                            tools:ignore="HardcodedText" />
                        <TextView android:text="31.2" android:textColor="#374151" android:padding="8dp"
                            tools:ignore="HardcodedText" />
                        <TextView android:text="12.48" android:textColor="#374151" android:padding="8dp"
                            tools:ignore="HardcodedText" />
                        <TextView android:text="4.30" android:textColor="#374151" android:padding="8dp"
                            tools:ignore="HardcodedText" />
                        <TextView android:text="290.0" android:textColor="#374151" android:padding="8dp"
                            tools:ignore="HardcodedText" />
                    </TableRow>

                    <TableRow>
                        <TextView android:text="Whitefish" android:textColor="#374151" android:padding="8dp"
                            tools:ignore="HardcodedText" />
                        <TextView android:text="22.0" android:textColor="#374151" android:padding="8dp"
                            tools:ignore="HardcodedText" />
                        <TextView android:text="24.0" android:textColor="#374151" android:padding="8dp"
                            tools:ignore="HardcodedText" />
                        <TextView android:text="27.0" android:textColor="#374151" android:padding="8dp"
                            tools:ignore="HardcodedText" />
                        <TextView android:text="10.45" android:textColor="#374151" android:padding="8dp"
                            tools:ignore="HardcodedText" />
                        <TextView android:text="3.52" android:textColor="#374151" android:padding="8dp"
                            tools:ignore="HardcodedText" />
                        <TextView android:text="200.0" android:textColor="#374151" android:padding="8dp"
                            tools:ignore="HardcodedText" />
                    </TableRow>

                    <TableRow>
                        <TextView android:text="Parkki" android:textColor="#374151" android:padding="8dp"
                            tools:ignore="HardcodedText" />
                        <TextView android:text="30.5" android:textColor="#374151" android:padding="8dp"
                            tools:ignore="HardcodedText" />
                        <TextView android:text="33.0" android:textColor="#374151" android:padding="8dp"
                            tools:ignore="HardcodedText" />
                        <TextView android:text="37.5" android:textColor="#374151" android:padding="8dp"
                            tools:ignore="HardcodedText" />
                        <TextView android:text="14.60" android:textColor="#374151" android:padding="8dp"
                            tools:ignore="HardcodedText" />
                        <TextView android:text="5.10" android:textColor="#374151" android:padding="8dp"
                            tools:ignore="HardcodedText" />
                        <TextView android:text="430.0" android:textColor="#374151" android:padding="8dp"
                            tools:ignore="HardcodedText" />
                    </TableRow>

                    <TableRow>
                        <TextView android:text="Perch" android:textColor="#374151" android:padding="8dp"
                            tools:ignore="HardcodedText" />
                        <TextView android:text="18.7" android:textColor="#374151" android:padding="8dp"
                            tools:ignore="HardcodedText" />
                        <TextView android:text="20.0" android:textColor="#374151" android:padding="8dp"
                            tools:ignore="HardcodedText" />
                        <TextView android:text="22.5" android:textColor="#374151" android:padding="8dp"
                            tools:ignore="HardcodedText" />
                        <TextView android:text="7.80" android:textColor="#374151" android:padding="8dp"
                            tools:ignore="HardcodedText" />
                        <TextView android:text="2.75" android:textColor="#374151" android:padding="8dp"
                            tools:ignore="HardcodedText" />
                        <TextView android:text="120.0" android:textColor="#374151" android:padding="8dp"
                            tools:ignore="HardcodedText" />
                    </TableRow>

                </TableLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
