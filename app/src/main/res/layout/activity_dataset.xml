                        <TextView style="@style/TableCell" android:text="3.52"
                            tools:ignore="HardcodedText"
                            android:textColor="#000000"/>
                        <TextView style="@style/TableCell" android:text="200.0"
                            tools:ignore="HardcodedText"
                            android:textColor="#000000"/>
                    </TableRow>

                    <TableRow>
                        <TextView style="@style/TableCell" android:text="Parkki"
                            tools:ignore="HardcodedText"
                            android:textColor="#000000"/>
                        <TextView style="@style/TableCell" android:text="30.5"
                            tools:ignore="HardcodedText"
                            android:textColor="#000000"/>
                        <TextView style="@style/TableCell" android:text="33.0"
                            tools:ignore="HardcodedText"
                            android:textColor="#000000"/>
                        <TextView style="@style/TableCell" android:text="37.5"
                            tools:ignore="HardcodedText"
