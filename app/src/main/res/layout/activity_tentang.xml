<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/full_width_header_container_model"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#3B82F6"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:gravity="center_vertical"
            android:elevation="6dp">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:contentDescription="Back"
                android:src="@drawable/ic_arrow_back"
                android:tint="#FFFFFF"
                tools:ignore="HardcodedText,UseAppTint,TouchTargetSizeCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="TENTANG APLIKASI"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deskripsi Aplikasi"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#111827"
                android:layout_marginBottom="8dp"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aplikasi ini dirancang untuk memprediksi berat ikan berdasarkan parameter morfologi seperti panjang, tinggi, lebar, dan jenis ikan. Menggunakan model machine learning TensorFlow Lite (.tflite) yang dilatih sebelumnya, aplikasi ini mampu memberikan estimasi berat ikan secara cepat dan akurat."
                android:textColor="#374151"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="12dp"
                tools:ignore="HardcodedText,VisualLintLongText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Informasi Dataset"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#111827"
                android:layout_marginBottom="8dp"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dataset berisi berbagai spesies ikan serta ukuran morfologinya seperti Length1, Length2, Length3, Height, dan Width. Setiap entri dilengkapi dengan label berat aktual untuk melatih model regresi prediktif."
                android:textSize="16sp"
                android:textColor="#374151"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="12dp"
                tools:ignore="HardcodedText,VisualLintLongText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cara Kerja Aplikasi"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#111827"
                android:layout_marginBottom="8dp"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pengguna mengisi input panjang (dalam 3 dimensi), tinggi, lebar, dan label jenis ikan. Input ini diproses oleh model .tflite untuk menghasilkan prediksi berat ikan dalam satuan gram secara real-time."
                android:textSize="16sp"
                android:textColor="#374151"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="20dp"
                tools:ignore="HardcodedText,VisualLintLongText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Made by Firza Febrian"
                android:textStyle="italic"
                android:textSize="18sp"
                android:textColor="#6B7280"
                android:layout_gravity="end"
                android:layout_marginTop="12dp"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
